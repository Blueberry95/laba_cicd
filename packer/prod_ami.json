{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": "",
      "ami_name": "java_app",
      "region": "eu-central-1",
      "instance_type": "t2.micro",
      "iam_role": "labacicd_admin_role",
      "artifact_location": ""
    },
    "sensitive-variables": ["aws_access_key", "aws_secret_key", "jenkins_admin_username", "jenkins_admin_password"],
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "iam_instance_profile": "{{user `iam_role`}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "ubuntu",
      "ami_name": "{{ user `ami_name` }}_{{ timestamp }}"
    }],
    "provisioners": [
        {
          "type": "shell",
          "inline": [
            "sleep 40"
          ]
        },
        {
          "type": "ansible",
          "playbook_dir": "./files/java_app",
          "playbook_file": "./files/java_app/deploy.yml"
        },
        {
          "type": "file",
          "source": "{{ user `artifact_location` }}",
          "destination": "/opt/tomcat/webapps/"
        }
    ]
}