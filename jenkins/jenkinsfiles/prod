pipeline {
    agent any
    parameters {
        string(name: 'BUCKET', defaultValue: 'labacicdterraform', description: 'AWS bucket for tf.state')
    }
    stages {
        stage('Build') {
            steps {
                cleanWs()
                echo 'Testing..'
            }
        }
        stage('Create test VM') {
            steps {
                git branch: 'master',
                url: 'https://github.com/Blueberry95/laba_cicd.git'
                dir ('terraform/prod') { 
                    sh("terraform init -backend-config=\"bucket=${params.BUCKET}\" && terraform apply -var \"bucket=${params.BUCKET}\" -auto-approve")
                }
            }
        }
        stage('Test application') {
            steps {
                dir ('terraform/prod') { 
                    sh('IP=$(terraform output instance_public_ip) && ping $IP -c 10')
                }
            }
        }
    
    }
    post {
        always('Clean Workspace') {
            cleanWs()
        }
    }
} 